<resources>
    <!-- Các kiểu ứng dụng của bạn -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Tùy chỉnh chủ đề của bạn tại đây. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Kiểu cho các mục trong lưới sản phẩm -->
    <style name="ProductGridItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">8dp</item>
        <!-- Áp dụng lề cho GridLayout -->
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_margin">4dp</item> <!-- Khoảng cách giữa các mục -->
    </style>

    <style name="ProductGridImage">
        <item name="android:layout_width">70dp</item> <!-- Điều chỉnh kích thước nếu cần -->
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/shape_placeholder_gray_rounded</item>
    </style>

    <style name="ProductGridText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item> <!-- Căn giữa văn bản nhiều dòng -->
    </style>

</resources>